#!/bin/sh
#
# dfInstall: POSIX shell scripts to install an entire Linux desktop
#            environment into a user's $HOME directory.
#
# usage: dfInstall [ --install | --check | --remove | --clean | --nuke ]
#
#        where --install: installs dotfiles into $HOME
#              --check:   checks what was installed
#              --remove:  removes files which were installed
#              --clean:   same as above, deletes emptied directories
#              --nuke:    same as above but cleans up other content
#
# shellcheck shell=dash
#

export ACTION=''
scriptName=dfInstall

. ../bin/parse_cmdline_and_source_functions

# Install dotfiles
(. ../bin/nvimInstall) &
(. ../bin/fishInstall) &
(. ../bin/homeInstall) &

wait
